@import '../../theme/variables.styl'

.air-drop
    height: 100vh
    background: url('../../img/bg.png') no-repeat
    background-size: cover
    background-attachment: fixed
    background-position: center bottom
    position: relative
    .center-form
        width: 540px
        height: 600px
        background-color: $light
        box-shadow: 0px 5px 24px 0 rgba(253, 118, 111, 0.45)
        position: absolute
        top: 50%
        left: 50%
        margin-top: -300px
        margin-left: -270px
        text-align: center
        .air-logo
            margin: 50px 0 100px
        .air-doc
            margin: 50px
        .air-tip
            width: 55%
            line-height: 1.63
            color: #1d1b1b
    .air-tip
        display: inline-block
  
