@import '../../theme/variables.styl'

.air-drop
    height: 100vh
    background: url('../../img/bg.png') no-repeat
    background-size: cover
    background-attachment: fixed
    background-position: center bottom
    position: relative
    min-width: 320px
    img
        max-width: 100%
    .red
        color: $red 
    .center-form
        width: 540px
        height: 600px
        background-color: $light
        box-shadow: 0px 5px 24px 0 rgba(253, 118, 111, 0.45)
        position: absolute
        top: 50%
        left: 50%
        margin-top: -300px
        margin-left: -270px
        text-align: center
        .air-logo
            .logo1
                width: 30px
                height: 30px
                margin-right: 10px
            .logo-text
                font-size: 16px
            margin: 50px 0 100px
        .air-doc
            margin: 50px
        .air-tip
            width: 55%
            line-height: 1.63
            color: #1d1b1b
            display: inline-block
            margin: 30px 0
        .form-group
            display: inline-block
            width: 80%
            height: 50px
            border-radius: 25px
            background-image: linear-gradient(to right, #fb915e, #fd776a 55%, #fc80aa)
            // box-shadow: 0px 1px 10px 0 #fb915e
            .form-control
                height: 46px
                background-color: $light
                margin: 2px 0 2px 2px
                border-radius: 25px 0 0 25px
                &:focus
                    border: none 
                    outline: none
            .has-value
                color: #222        
            .input-group-addon
                border-radius: 0 25px 25px 0
                background-image: linear-gradient(to right, #fb915e, #fd776a 49%, #fc80aa)
                color: $light
                font-size: 18px
                border: none
                cursor: pointer
        .air-state-logo 
            .logo1
                width: 30px
                height: 30px
                margin-right: 10px
            .logo-text
                font-size: 16px
            margin: 50px 0        
        .block
            width: 80%
            text-align: left
            margin: 40px auto 0
            font-size: 13px
            .form-control
                height: 45px
                border-radius: 25px
                border: solid 1px rgba(#1d1b1b, .3)
                background-color: $light
                font-size: 14px
                &:focus
                    box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(253,118,111,0.45)
            .phone
                padding: 0 20px
                margin: 16px 0
            .code-box
                position: relative
                .btn
                    position: absolute
                    top: 0
                    right: 0
                    margin: 0
                    height: 45px
                    background: linear-gradient(90deg,rgba(251,145,94,1),rgba(253,119,106,1),rgba(252,128,170,1))
                    border-radius: 0 25px 25px 0
                    color: $light
            .code
                margin-right: 10px
                padding: 0 100px 0 20px
            .has-value
                color: #222    
            .btn-default
                margin: 20px 0
                border-radius: 10px
            .green
                color: #2fd689  
                margin: 20px 0
                font-size: 18px
            .valid-btn
                display: block
                margin: 0
                background: linear-gradient(70deg,rgba(251,168,96,1),rgba(253,118,109,1),rgba(251,148,221,1),rgba(251,168,96,1))
                border-radius:22px
                color: $light
                border: none
                margin: 15px 0
        .form-footer
            font-size: 24px
            font-weight: bold
            .red
                font-size: 36px 
        .heart-tip
            color: rgba(#1D1B1B, 70%) 
            font-size: 14px      
    .pos
        position: absolute
    .cloud-l1
        top: 390px
        left: 20px
    .cloud-l2
        left: 100px
        top: 2px
    .hot-ball
        top: 90px
        left: 1px
        width: 30%
    .tree-l
        bottom: 20px
        left: 20px
    .cloud-r2
        right: 220px
        top: 8px
    .sun
        right: 5%
        top: 130px
        width: 16%
    .tree-r
        right: 0
        bottom: 50px
    .car
        right: 65px
        bottom: 1px
    .react-phone-number-input__icon
        img
            vertical-align: super
.air-drop-active
    .state-block
        width: 80%
        overflow: hidden
        margin: 260px auto
        .state-pic
            float: left
            width: 55%
            text-align: center
            img
                max-width: 100%
        .state-describe
            float: right
            width: 42%
            color: #1d1b1b
            h1
                font-size: 50px
                font-weight: bold
                margin: 45px 0 20px
            p
                font-size: 22px
            .btn
                width: 240px
                height: 70px
                background-image: linear-gradient(to right, #fb915e, #fd776a 45%, #fc80aa)
                box-shadow: 2.5px 4.3px 32px 0 rgba(253, 120, 103, 0.45)
                border-radius: 35px
                color: $light
                margin: 11% 0
                font-size: 22px
                letter-spacing: normal
                padding: 0
                border: none
