@import '../../theme/variables.styl'

html, body
    font-family:"Microsoft YaHei","MicrosoftJhengHei",STHeiti,MingLiu
    // min-width: 1140px
    height: 100%
    color: $fontc
    font-size: 14px

.height
    height: 100%
ul
    padding: 0
    margin: 0

li
    list-style: none

a
    color: $fontc
    &:focus,
    &:hover
        outline: 0
        text-decoration: none
.nav > li > a:hover,
.nav > li > a:focus
    background-color: $light

.app
    padding: 0
    margin: 0

.clearfix
    zoom: 1

.clearfix:after
    content: ""
    display: block
    clear: both
    height: 0

.left
    float: left
.right
    float: right
    